{
  "bin": {
    "watcher": "dist/main/index.js"
  },
  "keywords": [
    "monorepo-watch",
    "file-watcher",
    "lerna-watcher"
  ],
  "types": "dist/types",
  "name": "monorepo-watch",
  "version": "0.0.2",
  "description": "A package that for monorepos that watches a specific package and it's dependencies.",
  "main": "dist/main/index.js",
  "repository": "https://github.com/utkarshk384/monorepo-watch.git",
  "homepage": "https://github.com/utkarshk384/monorepo-watch",
  "author": "Utkarsh Kumar",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "tsc --watch",
    "dev": "yarn build && npm uninstall . && npm  i -g .",
    "test": "jest --coverage",
    "release": "yarn build && release-it",
    "test:watch": "jest --coverage --watchAll",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/glob": "^7.1.4",
    "@types/is-glob": "^4.0.2",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.mergewith": "^4.6.6",
    "@types/node": "^16.4.13",
    "@types/yargs": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "bugs": {
    "url": "https://github.com/Utkarshk384/monorepo-watch/issues"
  },
  "peerDependencies": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@manypkg/find-root": "^1.1.0",
    "@manypkg/get-packages": "^1.1.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "glob": "^7.1.7",
    "is-glob": "^4.0.1",
    "lodash.debounce": "^4.0.8",
    "lodash.mergewith": "^4.6.2",
    "yargs": "^17.1.1"
  }
}
